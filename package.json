{
	"name": "kas-installer",
	"version": "0.1.4",
	"description": "Installs KDE Activity Scripts",
	"author": "Iron Oxide Labs LLC <admin@ironoxidelabs.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Iron-Oxide-Labs-LLC/kas-installer.git"
	},
	"bin": {
		"kas-installer": "dist/install.js"
	},
	"scripts": {
		"start": "node ./dist/install.js",
		"test": "jest",
		"build": "tsc --build",
		"clean": "tsc --build --clean",
		"prepublish": "yarn test && yarn build"
	},
	"dependencies": {
		"@types/node": "^20.8.10",
		"commander": "^11.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"devDependencies": {
		"@types/jest": "^29.5.7",
		"@types/mock-fs": "^4.13.3",
		"jest": "^29.7.0",
		"mock-fs": "^5.2.0",
		"ts-jest": "^29.1.1"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
